!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'AW Automation Report'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'aw_automation_report'}"}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    .container-fluid
      = render 'layouts/messages'
      .main_content
        = yield          
